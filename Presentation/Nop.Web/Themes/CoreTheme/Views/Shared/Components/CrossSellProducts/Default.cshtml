@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="product-grid cross-sells col-md-12">
        <div class="title panel-heading">
            <h2>@T("ShoppingCart.CrossSells")</h2>
        </div>
        <div class="product-grid">
            <div class="item-grid row">
                @foreach (var product in Model)
                {
                    <div class="item-box col-xs-12 col-sm-4 col-md-3 product-align">
                        <div class="thumbnail">@await Html.PartialAsync("_ProductBox", product)</div>
                    </div>
                }
            </div>
        </div>
    </div>
}