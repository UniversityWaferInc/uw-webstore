@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="related-products-grid col-md-12 product-grid">
        <div class="title panel-heading">
             <h2>@T("Products.RelatedProducts")</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="item-box product-grid col-xs-12 col-sm-4 col-md-3 product-align clearfix">
                    <div class="thumbnail">@await Html.PartialAsync("_ProductBox", item)</div>
                </div>
            }
        </div>
    </div> 
}