@model IList<ProductOverviewModel>
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.RecentlyViewedProducts").Text);
    //page class
    Html.AppendPageCssClassParts("html-recently-viewed-products-page");
}
<div class="page recently-viewed-products-page from-panel">
    <div class="page-title panel-heading">
        <h1>@T("Products.RecentlyViewedProducts")</h1>
    </div>
    <div class="page-body panel-body">
        @if (Model.Count > 0)
        {
            <div class="product-grid">
                <div class="item-grid">
                    @foreach (var product in Model)
                    {
                        <div class="item-box col-xs-12 col-sm-4 col-md-4 product-align">
                            <div class="thumbnail">
                                @await Html.PartialAsync("_ProductBox", product)
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
