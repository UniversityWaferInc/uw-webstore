@model ProductDetailsModel
@{
    var addtocomparelink = Url.RouteUrl("AddProductToCompare", new { productId = Model.Id });
}
@if (Model.CompareProductsEnabled)
    
{
    <div class="compare-products">
        <button type="button" class="btn btn-default add-to-compare-list-button" onclick="AjaxCart.addproducttocomparelist('@addtocomparelink');return false;">@T("Products.Compare.AddToCompareList")</button>
    </div>
}